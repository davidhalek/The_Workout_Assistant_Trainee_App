<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    cardView:cardBackgroundColor="#81c784"
    cardView:cardCornerRadius="12dp"
    cardView:cardElevation="3dp"
    cardView:contentPadding="4dp">

    <LinearLayout
        android:id="@+id/cardViewLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtRoutineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example Routine Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRoutineDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example routine description." />
    </LinearLayout>

</androidx.cardview.widget.CardView>