<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#176670"
    android:orientation="vertical"
    tools:context=".log_workout.LogWorkoutActivity">

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="58dp" />

    <FrameLayout
        android:id="@+id/layout_dialog_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Exercise Routine:" />

            <TextView
                android:id="@+id/txtRoutineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/black_border"
                android:padding="5dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Exercises Remaining:" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerExercisesRemaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/black_border" />

            <Button
                android:id="@+id/btnEndWorkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="End Workout" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Exercises Completed:" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerExercisesCompleted"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/black_border" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>